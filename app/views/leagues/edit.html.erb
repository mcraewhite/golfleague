<% if @league.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this league from being saved:</h2>
    <ul>
      <% @league.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @league do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :logo, "Logo (enter the filename)" %>
    <%= form.text_field :logo, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :player_ids, "Add Players" %>
    <%= form.collection_check_boxes :player_ids, Player.all, :id, :name, {}, {class: "form-control"} %>
  </div>
  <%= form.button 'Modify League', class: "btn btn-success" %>
<% end %>
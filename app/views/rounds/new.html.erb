<% if @round.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this round from being saved:</h2>
    <ul>
      <% @round.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @round do |form| %>
  <div class="form-group">
    <%= form.label :player_id, "Select Player" %>
    <%= form.collection_radio_buttons :player_id, Player.all, :id, :name, {}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :course_id, "Select Course" %>
    <%= form.collection_radio_buttons :course_id, Course.all, :id, :name, {}, {class: "form-control"} %>
  </div>
  <%= form.button 'Start New Round', class: "btn btn-success" %>
<% end %>
<h1>
  Explore courses!
  <span class="pull-right">
    <%= link_to "New Course", new_course_path, class: 'btn btn-lg btn-primary' %>
  </span>
</h1>
<div class="row">
  <% @courses.each do |course| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <% if course.logo.nil? or course.logo == "" %>
          <%= link_to image_tag("default_course.jpg", width: 100), course %>
        <% else %>
          <%= link_to image_tag(course.logo, width: 100), course %>
        <% end %>
        <div class="caption">
          <h3>
            <%= link_to course.name, course %>
            <span class="pull-right">
              <%= link_to "Edit", edit_course_path(course), class: 'btn btn-xs btn-success' %>
            </span>
          </h3>
          <p><strong>Slope:</strong> <%= course.slope %></p>
          <p><strong>Rating:</strong> <%= course.rating %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <h1>
    Explore courses!
    <span class="pull-right">
      <%= link_to "New Course", new_course_path, class: 'btn btn-lg btn-primary' %>
    </span>
  </h1>
</div>
  
<div class="row">
  <% @courses.each do |course| %>
    <div class="col-xs-3 col-md-6 col-lg-12">
      <div class="thumbnail">
        <div class="caption">
          <h3>
            <%= link_to course.name, course %>
            <span class="pull-right">
              <%= link_to "Edit", edit_course_path(course), class: 'btn btn-xs btn-success' %>
            </span>
          </h3>
          <% course.teesets.each do |teeset| %>
            <p><strong><%= teeset.name %></strong></p>
            <p><strong>Yards:</strong> <%= teeset.yards %></p>
            <p><strong>Slope:</strong> <%= teeset.slope %></p>
            <p><strong>Rating:</strong> <%= teeset.rating %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
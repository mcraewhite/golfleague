<h1 class="title">
  <%= @league.name %>
  <span class="pull-right">
    <%= link_to "Add Players to League", edit_league_path(@league), class: 'btn btn-sm btn-success' %>
    <%= link_to "Edit League", edit_league_path(@league), class: 'btn btn-sm btn-success' %>
  </span>
</h1>

<div class="container-fluid">
  <div class="row">
    League Members:
    <% @players.each do |player| %>
      <div class="col-xs-3 col-md-3">
          <h3><%= link_to player.name, player_path(player) %>:</h3>
          <p><strong>Handicap Index:</strong> <%= player.handicap_index %></p>
      </div>
    <% end %>
  </div>
</div>
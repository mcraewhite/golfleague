<% if @course.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this course from being saved:</h2>
    <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @course do |form| %>
  <h3>Course Info:</h3>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :logo, "Logo (enter the filename)" %>
    <%= form.text_field :logo, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :slope %>
    <%= form.number_field :slope, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, class: "form-control", step: 0.1 %>
  </div>
  <h3>Holes:</h3>
    <ul>
      <%= form.fields_for :holes do |hole| %>
          <div class="container-fluid">
            <div class="row">
              <div class="col-xs-4 col-md-4">
                <!-- <div class="form-group"> -->
                  <%= hole.label :number %>
                  <%= hole.text_field :number, class: "form-control", readonly: true %> 
                <!-- </div> -->
                <!-- <div class="form-group"> -->
                  <%= hole.label :yards %>
                  <%= hole.number_field :yards, class: "form-control" %>
                <!-- </div> -->
                <!-- <div class="form-group"> -->
                  <%= hole.label :par %>
                  <%= hole.number_field :par, class: "form-control" %>
                <!-- </div> -->
                <!-- <div class="form-group"> -->
                  <%= hole.label :handicap %>
                  <%= hole.number_field :handicap, class: "form-control" %>
                <!-- </div> -->
              </div>
            </div>
          </div>
      <% end %>
    </ul>
  <%= form.button 'Create Course', class: "btn btn-success" %>
<% end %>
<% if @player.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this player from being saved:</h2>
    <ul>
      <% @player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @player do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :handicap_index, "Handicap Index" %>
    <%= form.text_field :handicap_index, class: "form-control" %>
  </div>
  <%= form.button 'Edit Player', class: "btn btn-success" %>
<% end %>
<h1 class="title">
  <%= @course.name %>
  <span class="pull-right">
    <%= link_to "Edit Course", edit_course_path(@course), class: 'btn btn-sm btn-success' %>
  </span>
</h1>


<div class="container-fluid"><div class="row">
  <div class="col-md-6">
    <p><%= image_tag @course.logo %>
      <p><strong>Slope:</strong> <%= @course.slope %></p>
      <p><strong>Rating:</strong> <%= @course.rating %></p>
    </p>
  </div>
  <% @holes.each do |hole| %>
    <div class="col-xs-2 col-md-2">
        <h3><%= link_to "Hole #" + hole.number.to_s, edit_course_hole_path(@course, hole) %>:</h3>
        <p><strong>Par:</strong> <%= hole.par %></p>
        <p><strong>Handicap:</strong> <%= hole.handicap %></p>
        <p><strong>Yardage:</strong> <%= hole.yards %></p>
    </div>
  <% end %>
  </div>
</div>
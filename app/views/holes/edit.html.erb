<% if @course.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this course from being saved:</h2>
    <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @hole.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this hole from being saved:</h2>
    <ul>
      <% @hole.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h3> You're editing Hole #<%= @hole.number %> for the course: <%= @course.name %></h3>
<%= form_for [@course, @hole] do |form| %>
  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :par %>
    <%= form.text_field :par, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :yards %>
    <%= form.text_field :yards, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :handicap %>
    <%= form.text_field :handicap, class: "form-control" %>
  </div>
  <%= form.button 'Edit Hole', class: "btn btn-success" %>
<% end %>
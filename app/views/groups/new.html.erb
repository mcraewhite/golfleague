<% if @group.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this round from being saved:</h2>
    <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @rounds do |form| %>
  <div class="form-group">
    <%= form.label :player_id, "Select Player" %>
    <%= form.collection_check_boxes :player_id, Player.all.order(:name), :id, :name, {}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :course_id, "Select Course" %>
    <%= form.collection_select :course_id, Course.all.order(:name), :id, :name, {}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :league_id, "Select League" %>
    <%= form.collection_select :league_id, League.all.order(:name), :id, :name, {}, {class: "form-control"} %>
  </div>
  <%= form.button 'Start New Round', class: "btn btn-success" %>
<% end %>